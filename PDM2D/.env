# ===============================================================================
# CONFIGURAZIONE APPLICAZIONE RICERCA DISEGNI 2D
# ===============================================================================

# === 1. CONFIGURAZIONE PERCORSI DI RICERCA ===
# Definisce le cartelle dove cercare i file di disegno
# Formato: percorsi separati da virgola (supporta percorsi multipli)
# Esempio: C:\Disegni,D:\Progetti\CAD
CARTELLE_DA_CERCARE=C:Inserisci\Il\Percorso   # modificare !

# === 2. CONFIGURAZIONE FINESTRA PRINCIPALE ===

# Dimensioni finestra come percentuale dello schermo (valori: 0.1 - 1.0)
WINDOW_SCREEN_RATIO_WIDTH=0.25      # % della larghezza dello schermo
WINDOW_SCREEN_RATIO_HEIGHT=0.7      # % dell'altezza dello schermo

# Offset posizione finestra come percentuale dello schermo
# Valori positivi spostano a destra/basso, negativi a sinistra/alto
WINDOW_POSITION_OFFSET_X=0
WINDOW_POSITION_OFFSET_Y=-0.05

# File icona dell'applicazione (nella cartella principale)
ICON_FILE=favicon.ico

# === 3. CONFIGURAZIONE LAYOUT E DIMENSIONI ===

# Spaziatura generale tra gli elementi dell'interfaccia (in pixel)
MAIN_SPACING=5

# Margini della finestra principale (in pixel)
# Definiscono lo spazio tra il bordo della finestra e il contenuto
MAIN_MARGINS_TOP=18
MAIN_MARGINS_RIGHT=18
MAIN_MARGINS_BOTTOM=18
MAIN_MARGINS_LEFT=18

# Altezza minima dell'area risultati di ricerca (in pixel)
RESULTS_MIN_HEIGHT=450

# Margini del footer (area informazioni in basso) (in pixel)
FOOTER_MARGINS_TOP=10
FOOTER_MARGINS_RIGHT=10
FOOTER_MARGINS_BOTTOM=1
FOOTER_MARGINS_LEFT=10

# Altezze minime dei riquadri principali (in pixel)

SEARCH_SECTION_MIN_HEIGHT=150         # Altezza minima del riquadro di inserimento prefisso
RESULTS_SECTION_MIN_HEIGHT=300        # Altezza minima del riquadro risultati della ricerca

# === 4. TESTI DELL'INTERFACCIA UTENTE ===
# Titoli e etichette principali
UI_TITLE=Ricerca Disegni 2D
UI_SUBTITLE=Trova rapidamente i tuoi disegni
PREFIX_LABEL=Inserisci il prefisso del file:
RESULTS_LABEL=Risultati della ricerca:

# Testi dei controlli di input
SEARCH_PLACEHOLDER=es. 37202.60010    # Testo di esempio nel campo di ricerca
SEARCH_BUTTON=Cerca File              # Testo del pulsante di ricerca
SEARCHING=Ricerca in corso...         # Messaggio durante la ricerca
DOUBLE_CLICK_INFO=Doppio click per aprire il file o trascinalo tenendo premuto il mouse  # Istruzioni per l'utente sui risultati

# === 5. MESSAGGI DI STATO E FEEDBACK ===

# Messaggi di stato della ricerca
NO_RESULTS=Nessun file trovato con il prefisso specificato
ERROR_PREFIX=Errore durante la ricerca
SUCCESS_PREFIX=Trovati
FILE_OPENED=File aperto:

# Messaggi di validazione input
INPUT_MISSING=Input mancante
INSERT_PREFIX=Inserisci un prefisso per la ricerca.
ERROR_TITLE=Errore

# === 6. MESSAGGI DI ERRORE DEL BACKEND ===

# Errori di validazione input
ERROR_EMPTY_PREFIX=Prefisso vuoto o non valido
ERROR_FILE_PATH_MISSING=Percorso file non specificato

# Errori di accesso cartelle
ERROR_FOLDER_NOT_EXISTS=Attenzione: La cartella {folder} non esiste.
ERROR_PERMISSION_DENIED=Errore: Accesso negato alla cartella {folder}
ERROR_FOLDER_ACCESS=Errore: Impossibile accedere alla cartella {folder}: {error}

# Errori di accesso file
ERROR_INVALID_FILE=Il percorso non esiste o non Ã¨ un file valido
ERROR_FILE_NOT_FOUND=File non trovato
ERROR_FILE_PERMISSION_DENIED=Accesso negato al file
ERROR_FILE_OPEN=Impossibile aprire il file: {error}